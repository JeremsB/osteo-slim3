                        <h1 style="font-size: 35px"><strong style="color: white;">INSCRIPTION</strong></h1>
                        <br>
                        <form action="{{ path_for('inscriptio') }}" method="post">
                            <input type="hidden"  name="hash" value="{{ invite.hash }}">
                            <div class="columns is-mobile">
                                <div class="column is-10 is-offset-1">
                                    <div class="columns">
                                        <div class="column is-12-mobile form">
                                            <div class="field">
                                                <div class="control">
                                                    <select name="civ" required="required" class="input">
                                                        {% if  invite.civ  == "MME" %}
                                                            <option value="MME" selected>MME</option>
                                                            <option value="MLLE">MLLE</option>
                                                            <option value="M">M</option>
                                                        {% elseif invite.civ    == "M" %}
                                                            <option value="MME">MME</option>
                                                            <option value="MLLE">MLLE</option>
                                                            <option value="M" selected>M</option>
                                                        {% elseif invite.civ    == "MLLE" %}
                                                            <option value="MME">MME</option>
                                                            <option value="MLLE">MLLE</option>
                                                            <option value="M" selected>M</option>
                                                        {% else %}
                                                            <option selected value>CIVILITÉ</option>
                                                            <option value="MME">MME</option>
                                                            <option value="MLLE">MLLE</option>
                                                            <option value="M">M</option>
                                                        {% endif %}
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="field">
                                                <div class="control">
                                                    <input class="input" type="text" placeholder="PRENOM" name="prenom" value="{{ invite.prenom }}" required>
                                                </div>
                                            </div>
                                            <div class="field">
                                                <div class="control">
                                                    <input class="input" type="text" placeholder="NOM" name="nom"  value="{{ invite.nom }}" required>
                                                </div>
                                            </div>
                                            <div class="field">
                                                <div class="control">
                                                    <input class="input" type="text" placeholder="EMAIL"  name="email" value="{{ invite.email }}" required>
                                                </div>
                                            </div>
                                            <div class="field">
                                                <div class="control">
                                                    <input class="input" type="text" placeholder="TELEPHONE" name="tel" value="{{ invite.telPortable }}" required
                                                           pattern="(01|02|03|04|05|06|07|08|09)[ \.\-]?[0-9]{2}[ \.\-]?[0-9]{2}[ \.\-]?[0-9]{2}[ \.\-]?[0-9]{2}">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="column is-12-mobile">
                                            <div class="field">
                                                <div class="control">
